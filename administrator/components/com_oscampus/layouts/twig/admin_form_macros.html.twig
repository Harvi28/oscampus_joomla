{% macro tabs_startset(form, params = []) %}
    {{ html('bootstrap.startTabSet', form.getName()|clean('alnum'), params)|raw }}
{% endmacro %}

{% macro tabs_add(form, fieldset_name, label = '') %}
    {% set fieldset = attribute(form.getFieldsets(), fieldset_name) ?: {'label' : fieldset_name, 'name' : fieldset_name} %}
    {% set label = label ?: fieldset.label %}
    {{ html('bootstrap.addTab', form.getName()|clean('alnum'), fieldset.name ~ '-panel', label|lang)|raw }}
{% endmacro %}

{% macro render_fieldset(form, fieldset_name, legend = true, span = '12') %}
    {{ html('osc.render.adminfieldset', form, fieldset_name, legend, span)|raw }}
{% endmacro %}

{% macro render_field(form, field_name, legend = true, span = '12') %}
    {{ html('osc.render.adminfield', form.getField(field_name), legend, span)|raw }}
{% endmacro %}

{% macro tabs_end() %}
    {{ html('bootstrap.endtab')|raw }}
{% endmacro %}

{% macro tabs_endset() %}
    {{ html('bootstrap.endTabSet')|raw }}
{% endmacro %}
