{% extends 'admin_list.html.twig' %}

{% block list_head %}
    {{ list_macro.th_checkall() }}
    {{ list_macro.th_sort('certificate.title', 'COM_OSCAMPUS_TITLE', ordering.direction, ordering.order) }}
    {{ list_macro.th_default('certificate.default', ordering.direction, ordering.order) }}
    {{ list_macro.th_published('certificate.published', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('certificate.id', 'COM_OSCAMPUS_ID', ordering.direction, ordering.order, '1%') }}
{% endblock %}

{% block list_item %}
    {{ list_macro.td_check(loop.index0, item.id) }}
    {{ list_macro.td_edit_link(item, loop.index0, 'certificate', 'certificates.', item.title) }}
    {{ list_macro.td_default(item.default, loop.index0, 'certificates.') }}
    {{ list_macro.td_published(item.published, loop.index0, 'certificates.') }}
    {{ list_macro.td_text(item.id, 'center') }}
{% endblock %}
