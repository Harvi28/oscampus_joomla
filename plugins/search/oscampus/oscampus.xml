    <authorUrl>http://www.joomlashack.com</authorUrl>
    <version>2.1.6</version>
    <description>plg_search_oscampus_description</description>

    <files>
        <folder>language</folder>
        <filename plugin="oscampus">oscampus.php</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="searchLimit"
                    label="PLG_SEARCH_OSCAMPUS_PARAMS_SEARCH_LIMIT_LABEL"
                    description="PLG_SEARCH_OSCAMPUS_PARAMS_SEARCH_LIMIT_DESC"
                    type="text"
                    filter="intval"
