    <authorUrl>http://www.joomlashack.com</authorUrl>
    <version>2.1.6</version>
    <description>plg_user_oscampus_description</description>

    <files>
        <folder>language</folder>
        <filename plugin="oscampus">oscampus.php</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="purge"
                       type="radio"
                       label="PLG_USER_OSCAMPUS_PURGE_LABEL"
                       description="PLG_USER_OSCAMPUS_PURGE_DESC"
                       class="btn-group btn-group-yesno"
                       default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
